extends layout

block content
  #episode
    .info
      .screenshot
        a(href='/episodes/#{episode.slug}')
          img(alt='#{episode.title}', width='200', height='125', src='/screenshot/#{episode.screenshot}')
      h1
        span.position ##{episode.sequence} 
        | #{episode.title}
      .details
         - var date = new Date(episode.date).toDateString()
         | #{date}  | 
         #{episode.length} | 
         each tag in episode.tags
           a(href='/tag/#{tag}') #{tag},  
      .description #{episode.description}
      .watch
        a.pretty_button(href='/video/#{episode.video}.mp4') Click to Play Video
      ul.downloads.horizontal
        li Downloads:
        li
          a(href='/source-code/#{episode.source}') source code
        li
          a(href='/video/#{episode.video}.mp4') mp4
          a(href='/video/#{episode.video}.webm') mp4
      .clear

    ul.nav.horizontal
      li.selected
        a.selected.tab(href='/episodes/#{episode.slug}') Notes
      li
        a.tab(href='') Similar Episodes

    .nav_section
      .inner
        div.show_notes !{episode.noteHtml}
